<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
  http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- 配置C3P0连接池   加入jar：com.springsource.com.mchange.v2.c3p0-0.9.1.2.jar-->
	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
	<property name="driverClass" value="com.mysql.jdbc.Driver"/>
	<property name="jdbcUrl" value="jdbc:mysql://localhost:3306/info"/><!-- 这里用的是jdbcUrl -->
	<property name="user" value="root" />
	<property name="password" value="mysql123" />
	</bean>
	<!-- 定义JdbcTemplate -->
	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource" /><!-- 注入连接池 -->
	</bean>
	<bean id="userDao" class="cn.demo2.UserDao">
	<property name="jdbcTemplate" ref="jdbcTemplate"/>
	</bean>
</beans>